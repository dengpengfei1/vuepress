$accentColor = #3eaf7c
$textColor = #2c3e50
$borderColor = #eaecef
$codeBgColor = #282c34

.language-less, .language-js {
  font-size: 20px;
}

// 首页样式重置
.theme-container.custom-page-class {
  /* 页面特定的规则 */
  .description {
    display: none;
  }
}

// version 页面样式重置
.theme-container.version-update-page-class {
  .content {
    padding-top: 0;
    > div {
      margin-top: 50px;
    }
    > h1 {
      display: none;
    }
    > .inner {
      border-top: none;
      span {
        a {
          display: inline-block;
          height 40px;
          line-height: 40px;
        }
      }
    }
  }
}
